@model IEnumerable<ToDoList.ViewModels.Categories.CategoryViewModel>

<div>
	<h3>Categories <span style="font-size: 14px"><a asp-controller="Categories" asp-action="ManageCategories">Edit categories</a></span></h3>
	<form class="input-group mb-2" id="categoryForm">
		<input class="form-control" type="text" id="categoryName" placeholder="Add category">
		<div class="input-group-append">
			<button class="btn btn-outline-secondary js-add-category" type="submit">Add</button>
		</div>
	</form>

	<div id="categoriesList">
		@foreach (var category in Model)
		{
			<a asp-controller="Tasks" asp-action="TaskWithCategory" class="btn btn-outline-secondary btn-block" asp-route-categoryId="@category.Id">@category.Name</a>
		}
	</div>
</div>
