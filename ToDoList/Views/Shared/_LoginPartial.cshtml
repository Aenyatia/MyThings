@if (User.Identity.IsAuthenticated)
{
	<form method="post">
		<ul class="navbar-nav">
			<li class="nav-item">
				<a class="nav-link" asp-controller="Home" asp-action="Index">
					Hello, @User.Identity.Name
				</a>
			</li>
			<li class="nav-item">
				<button type="submit" class="btn btn-link nav-link" asp-controller="Account" asp-action="SignOut">
					<i class="fas fa-sign-out-alt"></i>
					Sign Out
				</button>
			</li>
		</ul>
	</form>
}
else
{
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link" asp-controller="Account" asp-action="SignIn">
				<i class="fas fa-user"></i>
				Sign In
			</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" asp-controller="Account" asp-action="SignUp">
				<i class="fas fa-user-plus"></i>
				Sign Up
			</a>
		</li>
	</ul>
}
