@model IEnumerable<CategoryDto>

<div>
	<h3>Categories</h3>
	<div>
		@foreach (var category in Model)
		{
			<a asp-controller="Tasks" asp-action="GetTasksByCategory" asp-route-categoryId="@category.Id"
			   class="btn btn-outline-secondary btn-block">
				@category.Name
			</a>
		}
	</div>
</div>
